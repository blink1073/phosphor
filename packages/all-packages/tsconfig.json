{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./lib",
    "lib": ["ES5", "ES2015.Collection", "ES2015.Promise", "DOM"],
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@phosphor/*": ["node_modules/@phosphor/*"]
    }
  },
  "include": ["src/*"]
}
